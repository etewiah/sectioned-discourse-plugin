<div class="container">


  <div class="row">
    <button class='btn btn-primary pull-right' style="" {{action 'createTopic' }} title="">
      <i class="fa fa-plus"></i>New Topic
    </button>
  </div>
  <div class="row">
    <h1 class="maps-list-header" style="">
    Conversations in this section
  </h1>

  </div>



  {{#each topic in model.section_topics }}
  <div class="geo-topic-line">
    {{#link-to 'topic.fromParams' topic.slug topic.id }}
    <div class="row geo-topic-row">
      <h3 class="topic-list-title">
      {{ topic.title }}
    </h3>
      <p class="topic-excerpt ">{{{ topic.excerpt }}}</p>

    </div>


    <div style="margin-left: 1%;">
      {{#each location in topic.locations }}
      <span class="badge-places">{{ location.title }} <i class="fa fa-map-marker"></i></span> {{/each}}

      <div class="pull-right">
        <span class="badge-posts">{{ topic.views }}  <i class="fa fa-eye"></i></span>
        <span class="badge-posts">{{ topic.posts_count }} <i class="fa fa-comments"></i></span>
        <span class="badge-posts">last post on: {{format-date topic.last_posted_at }}</span>
      </div>
    </div>

    <div class="geo-topic-sep"></div>
    {{/link-to}}

  </div>

  {{/each}} 

  {{ outlet }}

</div>
